<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class = "text-center">
        <% if params[:plan] == "2" %>
          <h1>Pro Account</h1>
          <p>Sign up with Pro for $10/month today and get access to the DevMatch community and contact information!</p>
        <% else %>
          <h1>Basic Account</h1>
          <p>Sign up with Basic today and get access to the DevMatch community.</p>
        <% end %>
      </div>
      <div class="well">
        <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
